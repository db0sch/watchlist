<h1><%= @movie.title %></h1>

<p>Director: <%= @movie.director %></p>
<p>Year: <%= @movie.year %></p>
<p>Duration: <%= @movie.duration %></p>
<p>Synopsis: <%= @movie.synopsis %></p>

<%= link_to 'Edit', edit_movie_path(@movie), class:'btn btn-warning'  %>
<%= link_to 'Delete', movie_path(@movie), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger"  %>
<%= link_to 'Back', movies_path %>

<h2>Reviews</h2>
<ul>
  <% @reviews.each do |review| %>
    <li><%= "*" * review.stars %><%= review.description %> by <%= review.author %></li>
  <% end %>

<%= simple_form_for([@movie, @review]) do |f| %>
  <%= f.input :description %>
  <%= f.input :author %>
  <%= f.input :stars %>
  <%= f.button :submit %>
<% end %>
  